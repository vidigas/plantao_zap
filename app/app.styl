.tv-app 
.tv-app *
	box-sizing border-box
	margin 0
	padding 0 

.tv-app 
	position fixed
	width 100%
	height 100vh
	background-color rgba(#000, .8)
	z-index 100
	padding 30px

	> .modal 
		width 100%
		height 100%
		background-color #dad5ff
		display grid
		grid-template-rows auto 150px
		
		> .contact-list
			overflow: auto
			padding 15px
			display grid
			grid-template-columns 1fr 1fr
			grid-gap 10px
			
			> .card
				background-color #fff
				border-radius 4px
				padding 15px
				box-shadow 0px 0px 5px 0px rgba(#373540, .3)
				
				&.-active
					background-color #c4bfe5
					
				
		> .message-wrapper 
			width 100%	
			display grid
			grid-template-rows auto 50px
			box-shadow -2px 0px 5px 0px rgba(#373540, .3)
			z-index 1
			
			> textarea
				width 100%
				border none
				resize none
				padding 15px
				font-size 1em
				line-height 1.2em
				
				&:focus
					outline none
					
				&::placeholder
					font-size 1em
					line-height 1.2em
					
			> .actions
				background-color #373540
				display flex
				justify-content space-between
				align-items center
				padding 5px 15px
			
				.icon
					width 25px
					vertical-align middle
					cursor pointer
					
					& + .icon
						display inline-block
					 margin-right 10px