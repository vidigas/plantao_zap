$black = #373540

.tv-app 
.tv-app *
.tv-open-button
.tv-open-button *
	box-sizing border-box
	margin 0
	padding 0 

.tv-open-button
	position fixed
	width 55px
	height 55px
	background-color $black
	padding 12px
	border-radius 50%
	right 50px
	bottom 50px
	z-index 100000
	transition-duration .5s
	
	> img 
		width 100%
		transition-duration .5s
	
	&:hover 
		> img
			transform scale(1.1)

.tv-app 
	position fixed
	width 100%
	height 100vh
	background-color rgba(#000, .6)
	z-index 100
	padding 30px

	> .modal 
		width 100%
		height 100%
		background-color #d3d3d3
		display grid
		grid-template-rows 50px auto 150px
		padding-top 10px 
					 